<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Профиль пользователя -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Имя пользователя"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_coach_requests_badge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_user_public_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID: FR-000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_user_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Роль: Пользователь"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_user_coach_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тренер: FR-123456"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_send_coach_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_coach_request"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Заявки пользователя -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Заявки"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Входящие заявки -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_view_incoming_requests"
                        style="@style/Widget.FitRation.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Входящие заявки"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tv_incoming_requests_badge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Отправленные заявки -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_view_sent_requests"
                        style="@style/Widget.FitRation.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Отправленные заявки"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tv_sent_requests_badge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Цели питания -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Цели питания"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_user_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Цель: Похудение"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_user_calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Норма калорий: 2000 ккал/день"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_user_nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Белки: 150г | Углеводы: 200г | Жиры: 67г"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Кнопка выхода -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:backgroundTint="@color/error"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>