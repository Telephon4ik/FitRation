<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_meal_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/meal_type_placeholder"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/cb_eaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Съедено"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_meal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meal_name_placeholder"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_meal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meal_description_placeholder"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/iv_meal_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:background="@color/gray_light"/>

        <TextView
            android:id="@+id/tv_nutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meal_nutrition_placeholder"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_coach_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coach_comment_placeholder"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/info"
            android:visibility="gone"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>